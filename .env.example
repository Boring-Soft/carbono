# ==================================
# SUPABASE CONFIGURATION
# ==================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==================================
# SITE CONFIGURATION
# ==================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ==================================
# DATABASE CONFIGURATION
# ==================================
# Note: Password in URLs must be URL-encoded
# Special characters: # → %23, } → %7D, @ → %40, [ → %5B

# Connection pooling URL (for runtime queries)
DATABASE_URL="postgresql://postgres.your_project_ref:your_password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection URL (for migrations)
DIRECT_URL="postgresql://postgres.your_project_ref:your_password@aws-0-region.pooler.supabase.com:5432/postgres"

# ==================================
# STORAGE CONFIGURATION
# ==================================
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=avatars

# ==================================
# NASA FIRMS API
# ==================================
# Get your key at: https://firms.modaps.eosdis.nasa.gov/api/area/
# Registration takes ~2 minutes
NASA_FIRMS_KEY=your_nasa_firms_api_key

# ==================================
# GOOGLE EARTH ENGINE
# ==================================
# Setup instructions:
# 1. Create project at https://console.cloud.google.com/
# 2. Enable Earth Engine API
# 3. Create Service Account
# 4. Download JSON key
# 5. Extract email and private key below

GEE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GEE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# ==================================
# OPTIONAL: ANALYTICS & MONITORING
# ==================================
# NEXT_PUBLIC_GA_ID=your_google_analytics_id
# SENTRY_DSN=your_sentry_dsn
